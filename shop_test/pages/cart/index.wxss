/* pages/cart/index.wxss */
.receipt-address {
  padding: 10rpx;
}
.address-detail {
  padding: 10rpx;
}
.address-detail {
  display: flex;
  border-bottom: 1px solid #eee;
}
.address-item {
  flex: 2;
}
.address-item2 {
  flex: 1;
}
.shop-list {
  padding-bottom: 90rpx;
}
.shop-title {
  font-size: 38rpx;
  color: var(--themeColor);
  padding: 10rpx;
  border-bottom: 1px solid #eee;
}
.shop-item {
  display: flex;
  height: 160rpx;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.shop-check {
  flex: 1;
  margin-right: 20rpx;
}
.goods-navigator {
  flex: 4;
}
.goods-image {
  margin-right: 10rpx;
  width: 140rpx;
}
.goods-data {
  display: flex;
}
.shop-main {
  width: 62vw;
  display: flex;
  flex-direction: column;
}
.shop-name {
  height: 50%;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.shop-bottom {
  height: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.shop-price {
  font-size: 36rpx;
  color: var(--themeColor);
  flex: 4;
}
.goods-num {
  display: flex;
  flex: 2;
  justify-content: space-around;
}
.goods-button {
  border: 1px solid #eee;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.goods-button :first-of-type{
  padding-bottom: 3rpx;
}


.function-bottom {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-items: center;
  align-items: center;
  padding-left: 10rpx;
  width: 100%;
  height: 90rpx;
  border-top: 1px solid #eee;
  background-color: #fff;
}
.check-all {
  flex: 1.5;
}
.price-all {
  flex: 4;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  justify-content: space-around;
  padding-right: 10rpx;
}
.price-all-data {
  font-size: 34rpx;
  color: var(--themeColor);
}
.price-all-bottom {
  /* height: 40%; */
  font-size: 24rpx;
}
.settlement {
  flex: 2;
  background-color: var(--themeColor);
  height: 100%;
  color: #fff;
  line-height: 90rpx;
  text-align: center;
}